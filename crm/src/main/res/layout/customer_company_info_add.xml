<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/customer_add_multiStateView"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_bg">

        <ImageView
            android:id="@+id/customer_add_company_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="8dip"
            android:src="@drawable/back_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dip"
            android:text="@string/add_customer"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_basic_info"
        android:layout_marginTop="10dip"
        android:textSize="@dimen/middle_text_size"
        android:textColor="@color/black_character_title"
        android:layout_marginLeft="15dip" />

    <LinearLayout
        android:id="@+id/customer_add_input_one_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/corners_bg_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip">

            <EditText
                android:id="@+id/customer_add_company_name_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:imeActionLabel="下一步"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:maxLength="50"
                android:paddingBottom="6.0dip"
                android:paddingLeft="80dip"
                android:paddingTop="6.0dip"
                android:singleLine="true"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/middle_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/customer_add_company_name_et"
                android:layout_centerVertical="true"
                android:text="@string/company_name_tag"
                android:textSize="@dimen/middle_text_size"
                android:textColor="@color/black_character_title"
                android:layout_marginLeft="15dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/h_line">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip">

            <EditText
                android:id="@+id/customer_add_company_address_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:imeActionLabel="下一步"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:maxLength="50"
                android:paddingBottom="6.0dip"
                android:paddingLeft="80dip"
                android:paddingRight="50dip"
                android:paddingTop="6.0dip"
                android:singleLine="true"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/middle_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/customer_add_company_address_et"
                android:layout_centerVertical="true"
                android:text="@string/company_address"
                android:textSize="@dimen/middle_text_size"
                android:textColor="@color/black_character_title"
                android:layout_marginLeft="15dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/h_line">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/customer_add_company_type_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/customer_add_company_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:paddingRight="10dip"
                android:layout_alignParentLeft="true"
                android:text="@string/company_type"
                android:textColor="@color/black_character_title"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/customer_add_company_type_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/customer_add_company_tag_tv"
                android:layout_centerVertical="true"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingBottom="6.0dip"
                android:paddingLeft="100dip"
                android:paddingTop="6.0dip"
                android:textColor="@color/black_character_title"
                android:textSize="@dimen/middle_text_size" >
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:padding="5dip"
                android:src="@drawable/arrow" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/h_line">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip">

            <EditText
                android:id="@+id/customer_add_main_product_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:imeActionLabel="下一步"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:maxLength="50"
                android:paddingBottom="6.0dip"
                android:paddingLeft="80dip"
                android:paddingRight="50dip"
                android:paddingTop="6.0dip"
                android:singleLine="true"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/middle_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/customer_add_main_product_et"
                android:layout_centerVertical="true"
                android:text="@string/main_product"
                android:textSize="@dimen/middle_text_size"
                android:textColor="@color/black_character_title"
                android:layout_marginLeft="15dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/h_line">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/customer_add_company_area_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/customer_add_company_area_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:paddingRight="10dip"
                android:layout_alignParentLeft="true"
                android:text="@string/province_city"
                android:textColor="@color/black_character_title"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/customer_add_company_area_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/customer_add_company_area_tag_tv"
                android:layout_centerVertical="true"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingBottom="6.0dip"
                android:paddingTop="6.0dip"
                android:textColor="@color/black_character_title"
                android:textSize="@dimen/middle_text_size" >
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:padding="5dip"
                android:src="@drawable/arrow" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/h_line">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip">

            <EditText
                android:id="@+id/customer_add_company_net_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:imeActionLabel="下一步"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:maxLength="50"
                android:paddingBottom="6.0dip"
                android:paddingLeft="80dip"
                android:paddingRight="50dip"
                android:paddingTop="6.0dip"
                android:singleLine="true"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/middle_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/customer_add_company_net_et"
                android:layout_centerVertical="true"
                android:text="@string/company_net"
                android:textSize="@dimen/middle_text_size"
                android:textColor="@color/black_character_title"
                android:layout_marginLeft="15dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/h_line">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip">

            <EditText
                android:id="@+id/customer_add_inbound_channel_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:imeActionLabel="下一步"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:maxLength="50"
                android:paddingBottom="6.0dip"
                android:paddingLeft="80dip"
                android:paddingRight="50dip"
                android:paddingTop="6.0dip"
                android:singleLine="true"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/middle_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/customer_add_inbound_channel_et"
                android:layout_centerVertical="true"
                android:text="@string/inbound_channel"
                android:textSize="@dimen/middle_text_size"
                android:textColor="@color/black_character_title"
                android:layout_marginLeft="15dip" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/customer_company_info_add_next_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/corners_bg_gray_all"
        android:gravity="center"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size"/>


</LinearLayout>
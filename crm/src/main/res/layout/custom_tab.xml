<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/trans"
    android:layout_alignParentBottom="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_inner_height"
        android:layout_gravity="bottom"
        android:background="@color/blue_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/home_main_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_child_height"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/home_main_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dip"
                android:src="@drawable/tab_main_normal" />

            <TextView
                android:id="@+id/tab_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:text="首页"
                android:visibility="gone"
                android:textColor="#0aca4e"
                android:textSize="10.0dip" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_customer_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_child_height"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/home_customer_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dip"
                android:src="@drawable/tab_customer_normal" />

            <TextView
                android:id="@+id/tab_bang_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:visibility="gone"
                android:textSize="10.0dip" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_sms_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_child_height"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/home_sms_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dip"
                android:src="@drawable/tab_sms_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:text="@string/my"
                android:visibility="gone"
                android:textSize="10.0dip" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_user_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_child_height"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/home_user_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dip"
                android:src="@drawable/tab_user_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:visibility="gone"
                android:textSize="10.0dip" />
        </FrameLayout>
    </LinearLayout>


</FrameLayout>